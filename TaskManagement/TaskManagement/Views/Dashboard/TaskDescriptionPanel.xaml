<Page x:Class="TaskManagement.Views.Panels.TaskDescriptionPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManagement.Views.Panels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TaskDescriptionPanel">

    <Grid Name="Container">
        <Label Content="Selected task's notes and attachments" HorizontalAlignment="Left" Margin="0,-2,0,0" VerticalAlignment="Top" Width="220"/>
        <Grid Background="White" Margin="0,29,0,0">
            <TextBox Name="TaskDescriptionInput" Text="{Binding TreeViewVM.SelectedTask.Description}" />
        </Grid>
    </Grid>
</Page>
