<Page x:Class="TaskManagement.Views.Panels.TreeViewPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManagement.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TreeViewPanel">
    <Page.DataContext>
        <local:TreeViewVM></local:TreeViewVM>
    </Page.DataContext>
    <Grid Background="White">
        <TreeView x:Name="treeView" ItemsSource="{Binding ItemsCollection}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding SubCollection}">
                    <TextBlock Text="{Binding ItemName}" FontSize="25"/>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</Page>
